<div id="dashboard">
  <%= simple_form_for @new_submission, remote: true, html: {id: "submission_form", class: "well form-inline"} do |f| %>
    <h3>Submit a Codility result page URL</h3>
    <%= f.input :url, label: false, placeholder: "Eg. https://codility.com/demo/results/demo8WK7HV-53C/" %>
    <%= f.submit "Submit", class: "btn btn-primary", data: {"disable-with" => "Please wait..."} %>
  <% end %>

  <table id="submissions" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Submission ID</th>
        <th>Codility Session ID</th>
        <th>Task Title</th>
        <th>Correctness</th>
        <th>Performance</th>
        <th>Task Score</th>
      </tr>
    </thead>
    <tbody id="submissions_listing">
      <%= render @submissions %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    SubmissionPoller.start(<%= @pending_submission_ids %>);
  });
</script>