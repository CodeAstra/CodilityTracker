$('#dashboard .alert').remove();
<% if @save_success %>
  $('form#submission_form')[0].reset();
  $('#submissions_listing').prepend('<%= j render(@submission) %>');
  highlightElement('#submission-<%= @submission.id %>');
<% else %>
  $('#dashboard').prepend("<%= j alert_msg(@submission.errors.full_messages.join(', '), 'danger') %>");
<% end %>